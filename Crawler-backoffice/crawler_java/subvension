package com.java.crawlerinnopolis.model;

import java.io.Serializable;

@XmlRootElement
@XmlAccessorType(XmlAccessType.FIELD)
public class Subvention implements Serializable {

	/**
	 *
	 */
	private static final long serialVersionUID = 1L;
	@com.fasterxml.jackson.annotation.JsonProperty("_id")
	@com.fasterxml.jackson.annotation.JsonView(Views.All.class)
	Integer id;
	String nom;
	boolean valide;
	boolean complet;
	Date deadline;
	boolean permanent;
	Date dateAjout;
	Date dateValidation;
	String website;

	String requirements;
	String contact;
	String shortDescription;
	String details;
	String conditionFinancement;
	String attachment;

	int tailleMin;
	int tailleMax;
	int difficulty;

	Set<Theme> themes;
	Set<Organisation> organisations;
	Set<Area> areas;
	TypeSubvention type;

	Set<Tag> tags;

	Date dateMiseAJour;

	User createur;

	public Subvention() {
		tags = new HashSet<Tag>();
		themes = new HashSet<Theme>();
		areas = new HashSet<Area>();
		organisations = new HashSet<Organisation>();
		difficulty = 2;
	}
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((id == null) ? 0 : id.hashCode());
		return result;
	}

